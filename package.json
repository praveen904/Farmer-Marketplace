{
  "name": "farmers-marketplace",
  "version": "1.0.0",
  "description": "A dynamic marketplace for farmers to sell crops, products, and livestock",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd client && npm install",
    "start:prod": "npm run build && npm run server:prod",
    "server:prod": "node server/index.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5",
    "multer": "^1.4.5-lts.1",
    "dotenv": "^16.3.1",
    "express-validator": "^7.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "keywords": ["farmers", "marketplace", "auction", "livestock", "crops"],
  "author": "Farmer's Marketplace",
  "license": "MIT"
} 